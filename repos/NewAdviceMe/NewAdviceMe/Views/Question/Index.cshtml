@model IEnumerable<Question>
<body style='background: #F0FFFF'>


    <br />
    <div class="container row p-0 m-0">
        <div class="col-9">
            <h2 class="text-info">Question List</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control text-white" href="/Question/CreateQuestion"> Create New Question</a>
        </div>
    </div>

    <div class="col-12 border p-3 mt-3 ">
        <form method="post">
            @if (Model.Count() > 0)
            {



                <table class="table">
                    <tr>
                        <th>Question ID</th>
                        <th>Question Input</th>
                        <th>Category ID</th>
                        <th>User ID</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td> <a href="/Question/ViewQuestion/@item.QuestionID">@item.QuestionID</a></td>
                            <td> <a href="/Question/ViewQuestion/@item.QuestionID">@item.QuestionInput</a></td>
                            <td>@item.CategoryID</td>
                            <td>@item.UserID</td>
                            <td>
                                <a href="/Question/EditQuestion/@item.QuestionID" class="btn btn-success btn-sm">Edit</a>
                                <button asp-action="DeleteQuestion" asp-for="QuestionID" value="@item.QuestionID" onclick="return confirm('Are you sure you want to Delete this question?')" class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>

                    }

                </table>

            }
            else
            {
                <p>No Questions Available</p>
            }
        </form>
    </div>
</body>
